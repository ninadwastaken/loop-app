{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "declaration": false
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "App.js", 
    "index.js",
    "**/*.tsx",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}